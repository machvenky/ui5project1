<mvc:View
	controllerName="ui5project1.controller.Detail"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
    <App>
		<pages>
			<Page title="{ProductID}: Details"
				showNavButton="true"
				navButtonPress="onNavBack">
				<content>
					<ObjectHeader id="objectHeader" title="{ProductID}">
						<ObjectAttribute text="{Name}"></ObjectAttribute>
						<ObjectAttribute text="{Category}"></ObjectAttribute>
					</ObjectHeader>
					
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>